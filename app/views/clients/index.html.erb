<p id="notice"><%= notice %></p>

<h1>Listado de clientes
<%= link_to client_trash_path, class: "btn btn-default" do%>
  <span class="glyphicon glyphicon-trash"></span>
<% end %>
</h1>

<div class="row list">
  <div class="row table-head">
      <div class="col-md-4 col-xs-4">Nombre</div>
      <div class="col-md-2 col-xs-2">Cuil/cuit</div>
      <div colspan="2"></div>
  </div>
  <% @clients.each do |client| %>
    <div class="row">
      <div class="col-md-4 col-xs-4"><%= link_to client.nameSurname, client %></div>
      <div class="col-md-3 col-xs-3"><%= client.cuil_cuit %></div>
      <div class="col-md-2 col-xs-2"><%= link_to 'Editar', edit_client_path(client), class: "btn btn-default" %></div>
      <div class="col-md-2 col-xs-2"><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Â¿Seguro que desea eliminarlo?' }, class: "btn btn-default" %></div>
    </div>
  <% end %>
</div>

